
.left
  .widget
    = link_to_function 'Edit', "toggeler('edit_<%= singular_name %>_link', '<%= singular_name %>_show', 'update_<%= singular_name %>', 'Edit', 'Cancel')", :href => edit_<%= singular_name %>_path(@<%= singular_name %>), :id => "edit_<%= singular_name %>_link"
    |
    = link_to 'Back', <%= table_name %>_path
.clear

.centered
  .widget
    #<%= singular_name %>_show
<% for attribute in attributes -%>
      .css_table
        .label <%= attribute.column.human_name %>:
        .value=h @<%= singular_name %>.<%= attribute.name %>
<% end -%>

    #update_<%= singular_name %>.hidden
      = render :partial => 'form', :locals => {:<%= singular_name %> => @<%= singular_name %> }


/put this js in your layout if not already there
:javascript
  function toggeler(link_div, state_1_div, state_2_div, state_1_text, state_2_text){
    var opt = $('#' + link_div).html();
    if (opt == state_1_text){
      $('#' + state_1_div).hide('slow');
      $('#' + state_2_div).show('slow');
      $('#' + link_div).html(state_2_text);
    }else{
      $('#' + state_2_div).hide('slow');
      $('#' + state_1_div).show('slow');
      $('#' + link_div).html(state_1_text);
    };
  };
